{
  "ruby.intellisense": "rubyLocate",
  "ruby.codeCompletion": "rcodetools",
  "ruby.useBundler": true, //* Run non-lint commands with bundle exec
  "ruby.useLanguageServer": true,
  "ruby.lint": {
    "standard": false,
    "reek": false, //* Code smells
    "rubocop": {
      "lint": true,
      "rails": false, //* Requires rubocop-rails gem for RuboCop >= 0.72.0
      "useBundler": true
    }
  },
  "ruby.format": "rubocop",
  "ruby.rubocop.onSave": true,
  "ruby.rubocop.useBundler": true,
  "ruby.rubocop.suppressRubocopWarnings": true,
  "ruby.rubocop.configFilePath": "./.rubocop.yml",
  // "ruby.rubocop.executePath": "~/.rvm/gems/ruby-2.6.1@etl-elasticsearch-app-gemset/wrappers/",
  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "misogi.ruby-rubocop"
  }
}
